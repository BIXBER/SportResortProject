<Page x:Class="SportResort.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportResort.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная страница магазина" Background="#CCFFEE">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Fill="#FF45959A" Stroke="#263D979D"/>
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Content="Главная" Margin="10" Style="{StaticResource LittleButton}" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
            <Button Content="Заказы" Margin="10" Style="{StaticResource LittleButton}" VerticalAlignment="Center"/>
            <Button Content="Корзина" Margin="5,10,10,10" Style="{StaticResource LittleButton}" VerticalAlignment="Center"/>
            <StackPanel Orientation="Vertical" Margin="10,10,0,0">
                <Image Source="\Media\Products\Images\ProfileIcon.png" Width="40" Height="35" OpacityMask="#B2BB3131"/>
                <TextBlock TextWrapping="Wrap" Text="Профиль"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="1">
            <DataGrid x:Name="Catalog" AutoGenerateColumns="False" IsReadOnly="True">
                
            </DataGrid>
        </Grid>

    </Grid>
</Page>
